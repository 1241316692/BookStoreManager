<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="150dp"
              android:background="@color/bg_black"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="@dimen/dialog_padding"
    >

    <com.app.bookstoremanager.common.view.SelectTextView
        android:id="@+id/turn_pager"
        style="@style/read_operate_text"
        android:layout_height="@dimen/operate_text_height"
        android:background="@drawable/dialog_button_un_select_shape"
        android:text="仿真"
        />

    <com.app.bookstoremanager.common.view.SelectTextView
        android:id="@+id/turn_slide"
        style="@style/read_operate_text"
        android:layout_height="@dimen/operate_text_height"
        android:layout_marginLeft="15dp"
        android:background="@drawable/dialog_button_un_select_shape"
        android:text="平滑"
        />

    <com.app.bookstoremanager.common.view.SelectTextView
        android:id="@+id/turn_cover"
        style="@style/read_operate_text"
        android:layout_height="@dimen/operate_text_height"
        android:layout_marginLeft="15dp"
        android:background="@drawable/dialog_button_un_select_shape"
        android:text="覆盖"
        />

    <com.app.bookstoremanager.common.view.SelectTextView
        android:id="@+id/turn_no"
        style="@style/read_operate_text"
        android:layout_height="@dimen/operate_text_height"
        android:layout_marginLeft="15dp"
        android:background="@drawable/dialog_button_un_select_shape"
        android:text=" 无 "
        />
</LinearLayout>